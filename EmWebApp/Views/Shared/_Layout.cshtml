<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Myanmar Embassy (Singapore)</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/base.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="container group">
            <center>
                <div style="padding:0px;">
                    <!--
                    <img width="40" height="40" style="padding-bottom:10px" src="~/Content/images/logo.png" alt="Republic of the Union of Myanmar" />
                    &nbsp;&nbsp;&nbsp;  -->
                </div>
            </center>
        </div>
    </header>
    <div class="clear"></div>
    <div class="navbar navbar-inverse navbar-fixed-top  navbar-custom1">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img class="nav-divider " width="40" height="40" src="~/Content/images/logo.png" alt="Republic of the Union of Myanmar" />
                <a class="navbar-brand" href="http://www.myanmarembassy.sg">
                    Myanmar Embassy (Singapore)
                </a>
                <!-- Html.ActionLink("Myanmar Embassy (Singapore)", "Index", "Home", new { area = "" }, new { class = "navbar-brand" })  -->
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Form", "Create", "ConsularAppt")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Admin", "index", "Admin")</li>
                        <li>@Html.Partial("_LoginPartial")</li>
                    }
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        @RenderBody()
        <footer>
            <br /><br /><hr />
            <div class="row">
                <div class="col-md-offset-10 col-md-2">
                    <p style="font-size:10px;">&copy; @DateTime.Now.Year - MyanmarITE</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
